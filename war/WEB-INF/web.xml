<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">  
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>dataBaseServiceServlet</servlet-name>
    <servlet-class>ru.iteco.employeegxt.server.DataBaseServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>dataBaseServiceServlet</servlet-name>
    <url-pattern>/employeegxt/DataBaseService</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>EmployeeGxt.html</welcome-file>
  </welcome-file-list>

</web-app>
